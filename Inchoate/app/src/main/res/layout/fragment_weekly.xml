<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/weekly"
            android:layout_marginLeft="20dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/magazine_cover"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="110dp"
            android:background="@mipmap/magazine_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/magazine_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@mipmap/ic_launcher_round"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="TODO" />
                <TextView
                    android:id="@+id/stream_audio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/stream_audio" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:layout_width="50dp"
                    android:background="@mipmap/ic_launcher_round"
                    android:layout_height="wrap_content"
                    android:contentDescription="TODO" />
                <TextView
                    android:id="@+id/download_audio"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="20sp"
                    android:text="@string/download_audio" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/previous_edition"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/issue_content_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layoutManager="GridLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:ignore="MissingConstraints"
            tools:itemCount="20"
            tools:listitem="@layout/today_news"
            tools:spanCount="2" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>