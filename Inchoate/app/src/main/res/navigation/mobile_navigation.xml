    <fragment
        android:id="@+id/navigation_float_action"
        android:name="com.xuwanjin.inchoate.ui.floataction.FloatActionFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_article_detail" >
    </fragment>
    <fragment
        android:id="@+id/navigation_audio_playing"
        android:name="com.xuwanjin.inchoate.ui.playing.AudioPlayerFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_audio_play" >
    </fragment>
    <fragment
        android:id="@+id/navigation_vocabulary_yard"
        android:name="com.xuwanjin.inchoate.ui.vocabulary.VocabularyYardFragment"
        android:label="@string/app_name"
