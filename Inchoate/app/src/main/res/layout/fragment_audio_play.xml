<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <FrameLayout
        android:id="@+id/audio_playing_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/bar_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/bar_playing_progress"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp" />

            <ImageView
                android:id="@+id/bar_skip_15"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@mipmap/forward" />

            <ImageView
                android:id="@+id/bar_playing_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@mipmap/float_action_close" />
        </LinearLayout>

        <ImageView
            android:id="@+id/audio_play_controller"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/audio_player_collapse"
            android:backgroundTint="@color/colorPrimary"
            android:visibility="invisible" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/audio_playing_bar"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/audio_play_fly_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/app_name"
                android:text="The Economist"
                android:textColor="@color/red"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/audio_play_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Politics this week"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@mipmap/last" />

                <ImageView
                    android:id="@+id/article_cover_image"
                    android:layout_width="320dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp" />

                <ImageView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@mipmap/next" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/audio_played"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/playing_progress"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:max="100" />

                <TextView
                    android:id="@+id/audio_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/issue_category_menu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:background="@mipmap/issue_category_menu" />

                <ImageView
                    android:id="@+id/replay"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="40dp"
                    android:background="@mipmap/replay" />

                <ImageView
                    android:id="@+id/play_toggle"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="40dp" />

                <ImageView
                    android:id="@+id/forward"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="40dp"
                    android:background="@mipmap/forward" />

                <TextView
                    android:id="@+id/play_speed"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="40dp"
                    android:gravity="center"
                    android:text="1X"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/issue_audio_category" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>